nodeShadow(n=3px)
  -webkit-box-shadow: -1px 1px 13px n black;
  -moz-box-shadow: -1px 1px 13px n black;
  box-shadow: -1px 1px 13px n black;

#diagramContainer
  background-image: url(img/old_mathematics.png)
  padding: 20px;
  width:100%;
  min-height: $diagramHeight = 480px;
  resize:both;
  overflow: auto;
  border: 1px solid gray;
  /*overflow: auto;*/
  position: relative;
  &.no_selection
    -webkit-user-select: none; /* webkit (safari, chrome) browsers */
    -moz-user-select: none; /* mozilla browsers */
    -khtml-user-select: none; /* webkit (konqueror) browsers */
    -ms-user-select: none; /* IE10+ */
  // &.connectionModeOn
  //   border: 5px solid blue;
  //     .node:not(.unselectable)
  //       cursor: pointer;
  //     .node.active
  //       cursor: pointer;
  & .welcomeMessage
    vertical-align: middle;
    font-size: 20pt;
    font-weight: bolder
    margin: 0 auto;
    text-align: center;
    height: $diagramHeight
    line-height: @height - 50px
    color: rgb(153, 144, 144)
  &.connectionModeOn
    border: 2px solid blue !important;
    & .node:not(.cantBeDest)
      cursor: pointer;
      &:hover
        border: 1px solid black;
        nodeShadow(1px)


