/***********************  VARIABLE DEFS   ***************************/
$diagramHeight = 480px;

// Node Colors
.Price
  background-color: #cc05c4
[class*='Indicator']
  background-color: #1672aa
[class*='Signal']
  background-color: #329571
.Order
  background-color: #8432af

/***********************************************************************/
nodeShadow(n=1px, borderColor=black, shadowColor=black)
  border: 1px solid borderColor;

  -webkit-box-shadow: -1px 1px 11px n shadowColor;
  -moz-box-shadow: -1px 1px 11px n shadowColor;
  box-shadow: -1px 1px 11px n shadowColor;

