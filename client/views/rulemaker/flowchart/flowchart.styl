    display: none;
  & label.tree-toggler
    cursor: pointer;
    padding: 3px 11px;
    color: white;
    &.subKlass
      color: black;
      font-style: italic;
      text-decoration: underline
  & label.tree-toggler > i.glyphicon
    margin-right: 5px;

